{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NetNap",
  "version": "0.1.0",
  "identifier": "com.netnap.app",
  "build": {
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "NetNap",
        "width": 370,
        "height": 480,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
